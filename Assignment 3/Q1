class Solution
{
	// Function to find the peak element
	// arr[]: input array
	// n: size of array a[]
	public int peakElement(int[] arr,int n)
    {
       int largest = Integer.MIN_VALUE;
       int c =0;
       for(int i=0; i<arr.length; i++ ){
           if ( largest <arr[i]){
               largest = arr[i];
               c = i;
           }
       }
       return c;
       
       
    }
}
